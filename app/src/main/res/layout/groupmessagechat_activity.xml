<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#D3CCCC"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/groupToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ActonBarColor"
        >
        <LinearLayout
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/groupll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="0.3"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/back"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/groupImage"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo"
                    android:layout_weight="0.2"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llClick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.7"
                android:orientation="vertical">
            <TextView
                android:id="@+id/groupName"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:text="Name"
                android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/groupDescription"
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    android:text="Last seen"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/groupToolBar"
        android:layout_above="@id/bottomLl"
        android:divider="@android:color/transparent"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:paddingBottom="10dp"
        android:id="@+id/lv"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/bottomLl"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_weight="87"
            android:weightSum="100"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/message_border"
            >
            <EditText
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:padding="5dp"

                android:id="@+id/groupEditText"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Type a message"
                />
            <ImageView
                android:id="@+id/groupAttachFile"
               android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/attachment"
                android:layout_weight="15"
                />
            <ImageView
                android:id="@+id/groupCamera"
                android:layout_margin="7dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/camera"
                android:layout_weight="15"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/send_button"
            android:layout_weight="13"
            android:layout_margin="2dp"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/groupSend"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="invisible"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/send"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/groupVoice"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/voice"/>

        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>