<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginRight="100dp"
        android:padding="10dp"
        android:id="@+id/leftRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >
        <TextView
            android:layout_marginLeft="2dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFriendTime"
            android:text="11:12 am"/>
        <ImageView
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFriendTime"
            android:id="@+id/imageLeft"/>
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/chat_orange_light"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFriendTime"
            android:padding="10dp"
            android:id="@+id/tvFriendMessage"/>
    </RelativeLayout>
   <RelativeLayout
       android:layout_marginLeft="100dp"
       android:padding="10dp"
       android:id="@+id/rightRl"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       >
       <TextView
           android:textSize="10sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvMyTime"
           android:text="11:12 am"/>
       <ImageView
           android:padding="10dp"
           android:scaleType="fitXY"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/tvMyTime"
           android:id="@+id/imageRight"/>
       <TextView
           android:layout_toRightOf="@id/tvFriendTime"
           android:background="@drawable/chat_green_light"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/tvMyTime"
           android:padding="10dp"
           android:id="@+id/tvMyMessage"
           tools:ignore="NotSibling" />
   </RelativeLayout>
</RelativeLayout>