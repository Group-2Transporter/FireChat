<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/logo2"
        android:id="@+id/civAdmin"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/civAdmin"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:textColor="@color/ActonBarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/tvUserName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Will be admin if you exit group"
            android:id="@+id/tvText"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll"
        android:textColor="@color/white"
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_button_red"
        />
    <Button
        android:layout_marginTop="20sp"
        android:layout_below="@+id/ll"
        android:id="@+id/btnCancel"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_button"
        />
</RelativeLayout>